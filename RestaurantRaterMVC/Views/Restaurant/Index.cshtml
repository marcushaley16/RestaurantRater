@model IEnumerable<RestaurantRaterMVC.Models.Restaurant>

@{
    ViewBag.Title = "Index";
}

<h2>Restaurants</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Rating)
        </th>
        <th></th> <!-- this is just for formatting -->
    </tr>
    @foreach(var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                <!-- First string is text seen on page, second is the action it performs -->
                @Html.ActionLink("Update", "Edit", new { id = item.RestaurantID }) |
                @Html.ActionLink("Read", "Details", new { id = item.RestaurantID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.RestaurantID })
            </td>
        </tr>
    }
</table>



